<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGrey">


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/backIcon"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/background_textboxlayout" />

    <TextView
        android:id="@+id/labelname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/nome6"
        android:textColor="@color/Orange"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/labelname"
        android:fontFamily="@font/roboto_medium"
        android:text="skol"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/labelibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelname"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/ibu"
        android:textColor="@color/Orange"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ibu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelname"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="10dp"
        android:layout_toRightOf="@id/labelibu"
        android:fontFamily="@font/roboto_medium"
        android:text="13"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/labelprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelibu"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginLeft="20dp"
        android:text="@string/pre_o"
        android:textColor="@color/Orange"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/dindin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibu"
        android:layout_toRightOf="@id/labelprice"
        android:text="R$"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibu"
        android:layout_toRightOf="@id/dindin"
        android:text="16,00"
        android:textSize="18dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/labelingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelprice"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/ingredientes"
        android:textColor="@color/Orange"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelprice"
        android:layout_toRightOf="@id/labelingredients"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="10dp"
        android:text="agua,malte, lupulo"
        android:textSize="18sp"/>



</RelativeLayout>